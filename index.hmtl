        <div class="game">
            <h3>Python Data Analysis Quiz</h3>
            <p>Answer questions related to data analysis.</p>
            <div id="python-quiz-container">
                <script type="text/python">
                    from browser import document, html, alert

                    questions = [
                        {"question": "What is the purpose of a scatter plot?", "options": ["Show distribution", "Show relationship", "Show trend"], "answer": "Show relationship"},
                        {"question": "Which library is used for data manipulation in Python?", "options": ["NumPy", "Pandas", "Matplotlib"], "answer": "Pandas"},
                        {"question": "What does SQL stand for?", "options": ["Structured Query Language", "Simple Query Language", "Structured Question Language"], "answer": "Structured Query Language"}
                    ]

                    current_question = 0
                    score = 0

                    def show_question():
                        if current_question < len(questions):
                            q = questions[current_question]
                            document["python-quiz-container"].clear()
                            document["python-quiz-container"] <= html.H3(q["question"])
                            for option in q["options"]:
                                button = html.BUTTON(option)
                                button.bind("click", check_answer)
                                document["python-quiz-container"] <= button
                        else:
                            document["python-quiz-container"].clear()
                            document["python-quiz-container"] <= html.H3(f"Quiz completed! Your score: {score}/{len(questions)}")

                    def check_answer(event):
                        global current_question, score
                        if event.target.text == questions[current_question]["answer"]:
                            score += 1
                            alert("Correct!")
                        else:
                            alert("Incorrect!")
                        current_question += 1
                        show_question()

                    show_question()
                </script>
            </div>
        </div>
